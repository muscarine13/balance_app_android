<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statistics.StatisticActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/my_pane_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/statistics_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:background="@color/my_pane_background"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_cancel_black" />

        <Button
            android:id="@+id/statistics_today_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/my_pane_background"
            android:fontFamily="@font/comfortaa_bold"
            android:text="@string/statistic_button_title_today"
            android:textColor="@color/my_text"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/statistic_days_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/my_pane_background"
            android:fontFamily="@font/comfortaa_bold"
            android:text="@string/statistic_button_title_days"
            android:textColor="@color/my_text"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/statistics_today_button"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/statistics_months_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/my_pane_background"
            android:fontFamily="@font/comfortaa_bold"
            android:text="@string/statistic_button_title_months"
            android:textColor="@color/my_text"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/statistic_days_button"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/statistic_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/my_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>